  <!-- my CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- LINK FONT DARI FONT AWESOME -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ADMIN PAGE</title>
</head>
<body class="blue lighten-4 ">

  <ul class="tabs tabs-fixed-width tab-demo black lighten-1" >
    <li class="tab"><a class="active" href="#admin1">PERMINTAAN ARTIKEL</a></li>
    <li class="tab"><a href="#admin2" ">KELOLA ARTIKEL</a></li>
    <li class="tab"><a href="#admin3">KELOLA AKUN KIM</a></li>
     <li class="tab"><a href="#admin4">PERMINTAAN PENJUALAN PRODUK DESA</a></li>
      <li class="tab"><a href="#admin5" ">KELOLA PRODUK DESA</a></li>
  </ul>

  <section id="admin1" class="Artikel blue lighten-4  scrollspy">
    <div class="row" >
      <div class="container" style="border-bottom: 1px solid blue;">
       <h3 class="center light black-text text-darken-4"><b>PERMINTAAN PENERBITAN ARTIKEL</b></h3>
       <br>
       <a href="/">kembali ke home</a>
     </div>
   </div>
   <div class="container">
     <div>       
      <% if (req.length != 0) { %>
      <% for(var i = 0; i < req.length; i++) { %>
      <% if (i%2 == 0) { %>
      <div class="row">
        <div class="col m6">
          <h4 >Permintaan Penerbitan dari <%= req[i].desa %></h4>
          <p><%= req[i].tentang%></p>
          <div class="card">
            <div class="card-image">
              <img class="activator" id="cardpost" src="/images/uploaded/<%=req[i].foto%>">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= req[i].judul %><i class="material-icons right">more_vert</i></span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= req[i].judul %><i class="material-icons right">close</i></span>
              <p style="text-align: justify;"><%= req[i].postingan%></p>
            </div>
          </div>
          <p>Diposting pada <%= req[i].tanggal.toLocaleDateString()%></p> 
          <a class="waves-effect waves-light btn-large orange accent-4" href="/accept/<%= req[i].reqid %>"><i class="material-icons right"></i>Terima</a>
          <a class="waves-effect waves-light btn-large red accent-4" href="/reject/<%= req[i].reqid %>"><i class="material-icons right"></i>Tolak</a>
        </div>
        <% } else { %>
        <div class="col s12 m6">
          <h4 >Permintaan Penerbitan dari <%= req[i].desa %></h4>
          <p><%= req[i].tentang%></p>
          <div class="card">
            <div class="card-image">
              <img class="activator" id="cardpost" src="/images/uploaded/<%=req[i].foto%>">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= req[i].judul %><i class="material-icons right">more_vert</i></span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= req[i].judul %><i class="material-icons right">close</i></span>
              <p style="text-align: justify;"><%= req[i].postingan%></p>
            </div>
          </div> 
          <p>Diposting pada <%= req[i].tanggal.toLocaleDateString()%></p>  
          <a class="waves-effect waves-light btn-large orange accent-4" href="/accept/<%= req[i].reqid %>"><i class="material-icons right"></i>Terima</a>
          <a class="waves-effect waves-light btn-large red accent-4" href="/reject/<%= req[i].reqid %>"><i class="material-icons right"></i>Tolak</a>
        </div>
      </div>
      <% } %>
      <% } %>
      <% } else { %>
      <h5 style="color: red; text-align: center;">BELUM ADA PERMINTAAN PENERBITAN ARTIKEL</h5>
      <% } %>
    </div> 
  </div>
</section>

