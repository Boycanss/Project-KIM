<!DOCTYPE html>
<html>
<head>
  <% include ./partials/head %>
  <title>Detail</title>
</head>
<body>
  <div style="float: right;">
  <a href="/admin"><button>X</button></a>
  </div>
  <section id="admin2" class="Artikel white scrollspy">
     <h4 style="text-align: center;">Hasil artikel desa per bulan</h4>
    <form action="/hasilpost" method="POST">
    <div class="container">
        <div class="row">  
          <div class="col s12 m3">
          <label>TAHUN :</label>
          <select id="tahun" name="tahun">
                       <option value="semua">semua</option>
           <% for (var i = 2019; i >= 2000; i--) { %>

           <option value="<%= i %>"><%= i %></option>
          <% } %>
          </select>
        </div>

        <div class="col s12 m3">
          <label>BULAN :</label>
          <select id="bulan" name="bulan">
                   <option value="semua">semua</option>
           <% for (var y = 12; y >= 1; y--) { %>
    
           <option value="<%= y %>"><%= y %></option>
          <% } %>
          </select>
        </div> 

         <div class="col s12 m3">
          <br>
          <button type="submit" class="btn blue btn-large">SUBMIT</button>
        </div>  
        </div>
      </div>
      </form>
</section>

<section>
  <div class="container">
  <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>NO</td>
              <td>DESA</td>
              <td>TAHUN</td>
              <td>BULAN</td>
              <td>JUMLAH ARTIKEL</td>
            </tr>
          </thead>
          <tbody>
            <% if (data !=0) { %>
            <% for(var i = 0; i < data.length; i++) { %>
            <tr>
              <td><%= (i + 1) %></td>
              <td><%= data[i].desa %></td>
              <td><%= data[i].tahun %></td>
              <td><%= data[i].bulan %></td>
              <td><%= data[i].postingan %></td>
            </tr>
            <% } %>
            <% } else { %>
            <div></div>
            <% } %>
          </tbody>
        </table>
        </div>
  </section>

<!--JavaScript at end of body for optimized loading-->
<script type="text/javascript" src="js/materialize.min.js"></script>
<script>

  M.AutoInit();

  const slider = document.querySelectorAll('.slider');
  M.Slider.init(slider, {
    indicators:false,
    interval:7000,
    duration:500, 
    height:700 
  });


  const materialbox= document.querySelectorAll('.materialboxed');
  M.Materialbox.init(materialbox);

  const scroll = document.querySelectorAll('.scrollspy');
  M.ScrollSpy.init(scroll, {
    scrollOffset: 50
  });



</script>
</body>
</html>