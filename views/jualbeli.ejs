<!DOCTYPE html>
<html>
<head>
  <% include ./partials/head %>
<title>Produk Desa</title>

</head>

<body id="home" class="scrollspy">
<% include ./partials/headerNN %>


  <!-- Ini untuk bagian Jual Beli Online -->

  <section id="Jualbeli" class="jualbeli grey lighten-4 scrollspy">
    <form action="/beli" method="POST">
    <div class="container">
      <div class="row">
        <h3 class="center light grey-text text-darken-4">Produk Desa</h3>

        <%  if (jual) { %>
        <% for (var i = 0; i < jual.length; i++) { %>
        <div class="col s12 m3">
          <div class="card medium">
            <div class="card-image">
              <img src="/images/UPLOADED/JUALAN/<%=jual[i].foto%>" class="responsive-img materialboxed">
            </div>
            <div class="card-content">
              <h5 class="card-title"><%=jual[i].namabrg%> </h5>
              <object name="kategori"><%=jual[i].kategori%></object>
              <p name="harga">Rp. <%=jual[i].hargabrg%> ,-</p>
              <p> dari <%=jual[i].sumber%></p>
            </div>
            <div class="card-action">
              <label>
                <input type="checkbox" name="pilihan" value="<%=jual[i].namabrg%> : Rp <%=jual[i].hargabrg%>" />
                <span>Pilih</span>
              </label>
            </div>
          </div>
        </div>
        <%  } %>
        <% } %>
      </div> 
    </div>

        <div class="container">
          <div class="row">
            <div class="col m5 s12">
              <div class="grey lighten-3">
              </div>
            </div>
            <div class="col m5 s12">
             <button class="btn waves-effect waves-light orange accent-4 btn-large" type="submit" name="action">BELI
              <i class="material-icons right">send</i>
            </button></div></div><br>
          </form>
          </section>

          <!-- ini untuk footer -->
          <footer class="page-footer indigo darken-2">
            <% include ./partials/footer %>
                  </footer>


                  <script type="text/javascript" src="js/materialize.min.js"></script>
                  <script>

                    M.AutoInit();

                    const materialbox= document.querySelectorAll('.materialboxed');
                    M.Materialbox.init(materialbox);

                    const scroll = document.querySelectorAll('.scrollspy');
                    M.ScrollSpy.init(scroll, {
                      scrollOffset: 50
                    });


                  </script>

                </body>
                </html>

